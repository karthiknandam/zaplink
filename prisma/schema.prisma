generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Link {
  id    String    @id @default(cuid())
  code  String @unique
  url   String
  count Int    @default(0)

  lastClicked DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  linkStats LinkStats[]
}

// * Future modfication

model LinkStats{
  id String @id @default(cuid())

  vistTime DateTime

  // countries String[]

  code String

  userAgent String
  
  link Link @relation(fields: [code] , references: [code])
}

